<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="donationDAO">

	<select id="select_donation" parameterType="donationDTO" resultMap="rsMap">
		SELECT a.dona_num
		, a.dona_tit
		, a.dona_tit_sub
		, a.dona_con
		, a.dona_start_yy
		, a.dona_start_mm
		, a.dona_start_dd
		, a.dona_end_yy
		, a.dona_end_mm
		, a.dona_end_dd
		FROM d_detail a
		WHERE a.dona_num = #{dona_num}
	</select>
	<select id="select_list" parameterType="donation_listDTO" resultMap="list_rsMap">
		select b.sq
		, b.dona_num
		, b.dona_tit
		, b.member_email
		, b.dona_money
		, b.dona_date_yy
		, b.dona_date_mm
		, b.dona_date_dd
		from d_list b
		where b.dona_num = #{dona_num}
	</select>
	
	<select id="count_donation" parameterType="donation_listDTO" resultMap="list_rsMap">
		select distinct dona_num
		   ,sum(dona_money) as dona_money
		from d_list
		where dona_num = #{dona_num}
		group by dona_num
	</select>
	<select id="count_list"  resultMap="list_rsMap">
		select distinct dona_num
		   ,sum(dona_money) as dona_money
		from d_list
		group by dona_num
	</select>
	
	
	
